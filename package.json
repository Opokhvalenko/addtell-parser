{
  "name": "backend",
  "version": "1.0.0",
  "description": "AdServer (Fastify v5, SSR+Shadow DOM, Prisma)",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "start:prod": "node --enable-source-maps dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:format": "prisma format",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "fmt": "biome format .",
    "fmt:fix": "biome format --write .",
    "prepare": "husky",
    "prepush:checks": "npm run lint && npm run prisma:generate && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@clickhouse/client": "^1.12.1",
    "@fastify/ajv-compiler": "^4.0.2",
    "@fastify/autoload": "^6.3.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/env": "^5.0.2",
    "@fastify/helmet": "^12",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.2.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/schedule": "^6.0.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/static": "^8.2.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/type-provider-json-schema-to-ts": "^5.0.0",
    "@prisma/client": "^6.16.3",
    "@sinclair/typebox": "^0.33.9",
    "@types/image-size": "^0.7.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "async-retry": "^1.3.3",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cheerio": "^1.1.2",
    "fastify": "^5.6.0",
    "fastify-plugin": "^5.1.0",
    "image-size": "^2.0.2",
    "markdown-it": "^14.1.0",
    "nanoid": "^5.1.6",
    "pino": "^9.10.0",
    "prom-client": "^15.1.3",
    "rss-parser": "^3.13.0",
    "toad-scheduler": "^3.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/async-retry": "^1.4.9",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.16.3",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  }
}
