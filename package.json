{
  "name": "backend",
  "version": "1.0.0",
  "description": "AdServer (Fastify v5, SSR+Shadow DOM, Prisma)",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "start": "node dist/index.js",
    "start:prod": "node --enable-source-maps dist/index.js",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:format": "prisma format",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "fmt": "biome format .",
    "fmt:fix": "biome format --write .",
    "prepare": "husky",
    "tw:embed": "tailwindcss -c tailwind.config.js -i ./src/ssr/embed.css -o ./public/assets/tw-embed.css --minify",
    "build": "tsc -p tsconfig.json && npm run tw:embed",
    "prepush:checks": "npm run lint && npm run prisma:generate && npm run build",
    "test": "tsx --test tests/**/*.test.ts",
    "test:watch": "tsx --test --watch tests/**/*.test.ts"
  },
  "dependencies": {
    "@clickhouse/client": "^1.12.1",
    "@fastify/autoload": "^6.3.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/env": "^5.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.2.1",
    "@fastify/otel": "^0.9.3",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/schedule": "^6.0.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/static": "^8.2.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/api-logs": "0.205.0",
    "@opentelemetry/auto-instrumentations-node": "^0.53.0",
    "@opentelemetry/instrumentation-ioredis": "0.53.3",
    "@opentelemetry/instrumentation-redis-4": "0.48.0",
    "@opentelemetry/instrumentation-undici": "0.16.2",
    "@opentelemetry/resources": "2.1.0",
    "@opentelemetry/sdk-logs": "0.203.0",
    "@opentelemetry/sdk-metrics": "2.1.0",
    "@opentelemetry/sdk-node": "0.203.0",
    "@opentelemetry/sdk-trace-base": "2.1.0",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "@opentelemetry/semantic-conventions": "1.37.0",
    "@prisma/client": "^6.16.3",
    "@prisma/instrumentation": "6.16.3",
    "@sinclair/typebox": "^0.33.9",
    "@types/image-size": "^0.7.0",
    "ajv-formats": "^3.0.1",
    "argon2": "^0.44.0",
    "bcryptjs": "^3.0.2",
    "cheerio": "^1.1.2",
    "domhandler": "^5.0.3",
    "domutils": "^3.2.2",
    "fastify": "^5.6.0",
    "fastify-plugin": "^5.1.0",
    "image-size": "^2.0.2",
    "isomorphic-dompurify": "^2.28.0",
    "jsdom": "^27.0.0",
    "json-schema-to-ts": "^3.1.1",
    "nanoid": "^5.1.6",
    "prom-client": "^15.1.3",
    "retry": "^0.13.1",
    "rss-parser": "^3.13.0",
    "toad-scheduler": "^3.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@tailwindcss/cli": "^4.1.14",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/bcryptjs": "^2.4.6",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.6.2",
    "@types/retry": "^0.12.5",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.16.3",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  }
}
