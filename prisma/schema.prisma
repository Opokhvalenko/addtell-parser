generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Feed {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  url       String     @unique
  title     String?
  items     FeedItem[]
  updatedAt DateTime   @updatedAt
  createdAt DateTime   @default(now())
}

model FeedItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  feedId    String   @db.ObjectId
  feed      Feed     @relation(fields: [feedId], references: [id])
  guid      String?
  link      String
  title     String?
  content   String?
  pubDate   DateTime?
  createdAt DateTime @default(now())

  @@index([feedId])
  @@unique([feedId, link])
}